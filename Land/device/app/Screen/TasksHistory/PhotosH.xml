<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="Photos.css">
	
	<s:Push Id="curTsk" Value="$param1"></s:Push>
	<s:Push Id="taskStatus_AVRId" Value="$GetTaskStatusAVRId($param1)"></s:Push>
				
	<c:DockLayout>	
		<c:DockLayout CssClass="top_navigator">
			<c:HorizontalLayout CssClass="btn_back" OnEvent="Back" OnClickAction="$DoBack()">
				<c:Image />
				<c:TextView Text="#back#" />
			</c:HorizontalLayout>
			<c:Button Id="btnForward" Text="#forward#" CssClass="btn_forward" OnClickAction="$Workflow.DoAction(GoResumeH, $curTsk.Id)"/>
			<c:HorizontalLayout>
				<c:TextView Text="#photoReport#" />
			</c:HorizontalLayout>
		</c:DockLayout>
		<c:HorizontalLine CssClass="navy"/>
		
		<c:ScrollView Id="scrlVw">
						
			<c:HorizontalLayout CssClass="caption_grid">
		        <c:TextView Text="#photo#:"></c:TextView>
		    </c:HorizontalLayout>
		    
		    <s:Push Id="photoCount" Value="$GetPhoto($curTsk.Id, 1)"></s:Push>
		    								
			<s:If Test="$photoCount == 0">
			
				<c:HorizontalLine />
				<c:TextView Text="#unknown#" CssClass="TextNoData" />

			</s:If>
			<s:Else>
			
				<s:Push Id="photoes" Value="$GetPhoto($curTsk.Id, 0)"></s:Push>
														
				<s:Iterator Id="photo" Value="$photoes">
					<c:HorizontalLine />
						
					<c:SwipeHorizontalLayout Id="swipe_layout4" CssClass="swipe_layout" Index="0">
												
						<c:HorizontalLayout CssClass="grid">
							<c:VerticalLayout CssClass="no_mark"></c:VerticalLayout>
							<c:VerticalLayout>
								<c:TextView Text="$photo.Description" CssClass="main_row"></c:TextView>															
							</c:VerticalLayout>
							<c:Image />
						</c:HorizontalLayout>
												
					</c:SwipeHorizontalLayout>

				</s:Iterator>
			</s:Else>
						
		</c:ScrollView>		
		
	</c:DockLayout>

</c:Screen>